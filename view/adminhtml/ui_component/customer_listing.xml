<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<!-- Add 'customer_number' attribute to Customer Listing -->
	<columns name="customer_columns" class="Magento\Customer\Ui\Component\Listing\Columns">
		<column name="custom_column" sortOrder="90" class="ECInternet\Base\Ui\Component\Listing\Column\Customer\CustomerNumber">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="sortable" xsi:type="boolean">false</item>
					<item name="dataType" xsi:type="string">text</item>
					<item name="align" xsi:type="string">right</item>
					<item name="label" xsi:type="string" translate="true">Customer Number</item>
				</item>
			</argument>
		</column>
	</columns>
</listing>